<%= form_for([@post, @comment]) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :body %>
  <%= f.text_field :body %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :email_address %>
  <%= f.text_field :email_address %>

  <%= f.submit %>


<% end %>